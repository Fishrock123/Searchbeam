html(lang="en")
	include template/head
		title Blog Deletor
		link(rel="prev", href="/").nope

	body
		include template/header-nav

		.padd-top

		#editor.center

			if (user && user.type === 'admin')

				h1.err This Deletes a Post. You have been warned.
				br

				form(accept-charset="UTF-8", action="/blog-delete", method="post")#new-post
					div(style="margin:0;padding:0;display:inline")
						input(name="utf8", type="hidden", value="âœ“")

					input(name="title", placeholder="Title", size="auto", type="text").labeled#edit-title

					.blog-line
					.submit-post
						a(href="#").err#submit Delete This Post

			else
				- console.log('WARNING: IP: ' + query.ip + ' does not have a key!')
				.err Authorization Llama is unsatisfied by your credentials. Noob.

	include template/footer

		script.
			$(document).ready(function () {
				$("a#submit").click(function (e) {
					e.preventDefault();
					e.stopPropagation();
					return $('#new-post').submit(), !1;
				});
			});